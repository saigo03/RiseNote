<h3>Rise noteに登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "devise-form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- ユーザー名のフィールドを追加 -->
  <div class="field">
    <%= f.label :username %><span style="color: red; font-size: 0.8em;"> *</span><br />
    <span style="font-size: 0.9em;">2文字以上8文字以内で記入してください</span> <br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.label :email %><span style="color: red; font-size: 0.8em;"> *</span><br />
    <span style="font-size: 0.9em;">連続する「..」や@の前に「.」を置くこと、また *()<>,;:\"[] などの文字は使用することができません。</span><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: '例）Rise@risenote.com'%>
  </div>

  <div class="field">
    <%= f.label :password %><span style="color: red; font-size: 0.8em;"> *</span>
    <% if @minimum_password_length %>
    <% end %><br />
    <span style="font-size: 0.9em;">大文字を含んだ8文字以上で作成してください</span>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><span style="color: red; font-size: 0.8em;"> *</span><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
