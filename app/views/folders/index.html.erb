<h1>Folders</h1>

<%= form_with(model: @folder, local: true) do |form| %>
  <% if @folder.errors.any? %>
    <div class="error_explanation">
      <h2><%= pluralize(@folder.errors.count, "error") %> prohibited this folder from being saved:</h2>
      <ul>
        <% @folder.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "input-field" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Folder", class: "submit-button" %>
  </div>
<% end %>

<h2>Existing Folders</h2>

<div class="folder-grid">
  <% @folders.each do |folder| %>
    <%= link_to folder_memos_path(folder), class: "folder-item" do %>
      <div class="folder-name"><%= folder.name %></div>
    <% end %>
  <% end %>
</div>
