<%= turbo_frame_tag 'memo_detail' do %>
  <!-- メモ内容部分 -->
  <div class="border p-3 overflow-auto" style="height: 250px; white-space: pre-wrap; box-shadow: 0 0 3px rgba(0, 0, 0, 0.1);">
    <p class="mb-4"><%= @memo.content %></p>
  </div>

  <!-- タイトル -->
  <h4 class="mt-4"><%= @memo.title %></h4>

  <!-- 情報 -->
  <div class="mt-3" style="font-size: 0.75rem;">
    <p>作成日: <%= @memo.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
    <p>更新日: <%= @memo.updated_at.strftime("%Y年%m月%d日 %H:%M") %></p>
  </div>
<% end %>
