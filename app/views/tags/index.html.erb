<h1>タグ管理</h1>

<%= form_with(model: @tag, local: true) do |form| %>
  <h2>新しいタグを作成</h2>
  <div class="field">
    <%= form.label :name, 'タグ名' %>
    <%= form.text_field :name, autocomplete: 'off' %>
  </div>

  <div class="actions">
    <%= form.submit "作成" %>
  </div>
<% end %>

<h2>現在のタグ一覧</h2>
<ul>
  <% @tags.each do |tag| %>
    <li><%= tag.name %></li>
  <% end %>
</ul>

<%= link_to 'マイページへ', mypage_path %>
