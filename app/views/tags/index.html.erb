<h1>タグ管理</h1>

<%= form_with(model: @tag, local: true) do |form| %>
  <h2>新しいタグを作成</h2>
  <div class="field">
    <%= form.label :name, 'タグ名' %>
    <%= form.text_field :name, autocomplete: 'off' %>
  </div>

  <div class="actions">
    <%= form.submit "作成" %>
  </div>
<% end %>

<h2>現在のタグ一覧</h2>
<table>
  <thead>
    <tr>
      <th>タグ名</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td>
          <%= link_to '削除', tag_path(tag), data: { turbo_method: :delete } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'マイページへ', mypage_path %>
