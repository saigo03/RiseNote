<h1>ユーザー一覧</h1>

<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td>
          <% if current_user.admin? %>
            <%= link_to '削除', user_path(user), data: { turbo_method: :delete } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
