<h4>　</h4>
<a href="<%= folders_path %>" class="tag-a"><i class="fas fa-arrow-left"></i></a>
<h3 style="display: inline;" >ユーザー管理</h3>
<hr>

<div class="table-responsive">
  <table class="table table-hover" style="max-width: 75%; float: left;">
    <thead class="thead-light">
      <tr>
        <th scope="col">ユーザー名</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <!--詳細ページへのリンクを追加-->
        <tr style="cursor: pointer;" onclick="window.location='<%= user_path(user) %>'">
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<style>
  h3,.tag-a {
        display: inline;
        padding: 0;
        margin-top: 20px;
        margin-left: 5px;
    }
    thead th {
        position: sticky;
        top: 0;
        background: white;
    }

.table-responsive {
  max-height: 480px; /* ここで高さを設定します */
  overflow-y: auto; /* 縦方向にスクロール可能にします */
}

</style>